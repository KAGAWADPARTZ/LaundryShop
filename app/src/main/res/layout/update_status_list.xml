<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#85B3D1FF"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/userprofile"
            android:layout_centerVertical="true"
            android:id="@+id/img1"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/blue"/>

        <TextView
            android:id="@+id/user__Name"
            android:layout_width="256dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="36dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_toRightOf="@id/img1"
            android:text="Name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user__Address"
            android:layout_width="290dp"
            android:layout_height="19dp"
            android:layout_below="@+id/user__Name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_toRightOf="@id/img1"
            android:text="Location"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/contact__Number"
            android:layout_width="290dp"
            android:layout_height="19dp"
            android:layout_below="@+id/user__Address"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/img1"
            android:layout_toRightOf="@id/img1"
            android:text="contactNumber"
            android:textColor="#000"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>